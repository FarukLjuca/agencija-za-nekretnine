<Window x:Class="EFM.Pomocni_prozori.Unos_entiteta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unos entiteta" Height="300" Width="950">
    <StackPanel Name="stpGlavnaPanela">
        <Menu Name="mnuGlavni"
              Height="Auto"
              VerticalAlignment="Top">
            <MenuItem Name="mitFile"
                      Header="File"/>
        </Menu>
        
        <Grid Height="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Name="txtNazivEntiteta"
                       Text="Naziv entiteta: "
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <TextBox Name="tbxNazivEntiteta"
                     Grid.Column="1"
                     Margin="1"/>
        </Grid>
    </StackPanel>
</Window>
