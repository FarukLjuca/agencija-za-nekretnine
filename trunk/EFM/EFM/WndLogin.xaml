<Window x:Class="EFM.WndLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300" Topmost="True" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <StackPanel Orientation="Vertical" Name="SpnlMain" Margin="5">
        <WrapPanel Margin="3">
            <TextBlock Width="70">UserID</TextBlock>
            <TextBox Name="TxtUserID" Width="180"></TextBox>
        </WrapPanel>
        <WrapPanel Margin="3">
            <TextBlock Width="70">Password</TextBlock>
            <TextBox Name="TxtPassword" Width="180"></TextBox>
        </WrapPanel>
        
    </StackPanel>
</Window>
